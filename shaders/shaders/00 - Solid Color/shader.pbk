<languageVersion : 1.0;>

kernel NewFilter<
	namespace   : "Your Namespace";
	vendor      : "Your Vendor";
	version     : 1;
	description : "your description";
> {
	input  image4 src;
	output pixel4 dst;

	void evaluatePixel() {
		dst = pixel4(
			1.0, // red
			0.5, // green
			0.0, // blue
			0.8  // alpha
		);
	}
}
